                                android:layout_height="wrap_content"
                                android:elevation="0dp"
                                app:cardCornerRadius="@dimen/_15sdp">

                                <TableLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white">

                                    <TableRow
